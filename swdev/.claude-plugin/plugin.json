{
  "name": "swdev",
  "description": "Software development plugin with commands and hooks",
  "version": "1.2.0",
  "author": {
    "name": "Tutorial User"
  },
  "hooks": {
    "PostToolUse": [
      {
        "matcher": "Write|Edit",
        "hooks": [
          {
            "type": "command",
            "command": "mkdir -p \"$CLAUDE_PROJECT_DIR\"/agent-logs && echo 'triggered' >> \"$CLAUDE_PROJECT_DIR\"/agent-logs/plugin-hook-events.log"
          }
        ]
      }
    ]
  }
}
